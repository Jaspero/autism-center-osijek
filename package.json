{
  "name": "@jaspero/autism-center-osijek",
  "description": "Autism center osijek webapp. Built in Sapper and Svelte on firebase.",
  "version": "0.0.1",
  "scripts": {
    "target-setup": "firebase target:apply hosting website autism-center-osijek",
    "dev": "sapper dev",
    "build:scss": "node-sass index.scss static/global.css",
    "watch:scss": "node-sass index.scss static/global.css -w",
    "build": "sapper build --legacy && cp -r ./__sapper__/ ./functions/__sapper__",
    "prebuild": "rm -rf functions/__sapper__/build && node-sass index.scss static/global.css --output-style=compressed",
    "export": "sapper export --legacy",
    "start": "npm run build && firebase serve",
    "deploy": "firebase deploy --only hosting,functions:ssr",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.1",
    "firebase": "6.3.3",
    "firebase-admin": "8.3.0",
    "nodemailer": "6.2.1",
    "polka": "0.5.0",
    "sirv": "0.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/plugin-transform-runtime": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/runtime": "7.0.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "4.1.5",
    "rollup": "1.0.0",
    "rollup-plugin-babel": "4.0.2",
    "rollup-plugin-commonjs": "9.1.6",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-svelte": "5.1.0",
    "rollup-plugin-terser": "^5.2.0",
    "sapper": "0.27.9",
    "siema": "1.5.1",
    "svelte": "3.12.1"
  }
}
